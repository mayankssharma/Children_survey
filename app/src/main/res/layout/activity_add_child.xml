<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ChildrenRecords.UI.AddChildActivity">

    <View android:background="@android:color/holo_green_light"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/fname"
        android:layout_alignParentStart="true" />

    <View android:background="@android:color/holo_green_light"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/lname"
        android:layout_alignParentStart="true" />


    <View android:background="@android:color/holo_green_light"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="0dp"
        android:layout_marginTop="-15dp"
        android:layout_below="@+id/radiogroups"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/fname"
        android:hint="first name"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/submit" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lname"
        android:layout_marginTop="38dp"
        android:hint="last name"
        android:layout_below="@+id/fname"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="100dp"

        android:id="@+id/radiogroups"
        android:layout_below="@+id/lname"
        android:layout_marginTop="32dp"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="male"
            android:id="@+id/male"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="female"
            android:id="@+id/female"
            android:checked="false" />

    </RadioGroup>

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dob"
        android:hint="DOB (yyyy-mm-dd)"
        android:layout_below="@+id/radiogroups"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit"
        android:layout_marginBottom="77dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="addchild" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First Name"
        android:id="@+id/textView"
        android:layout_marginTop="14dp"
        android:layout_alignBottom="@+id/fname"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last Name"
        android:id="@+id/textView2"
        android:layout_marginTop="8dp"
        android:layout_alignTop="@+id/lname"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gender"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/radiogroups"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date of Birth"
        android:id="@+id/textView4"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/dob"
        android:layout_alignParentStart="true" />

</RelativeLayout>
