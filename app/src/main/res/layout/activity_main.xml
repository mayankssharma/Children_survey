<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ChildrenRecords.UI.MainActivity"
    android:onClick="addinfo1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Child"
        android:id="@+id/addchild"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="addchild" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Children Info"
        android:id="@+id/updateinfo"
        android:layout_below="@+id/addchild"
        android:layout_marginTop="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="updateinfo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Info About Child"
        android:id="@+id/addinfo"
        android:layout_below="@+id/updateinfo"
        android:layout_marginTop="67dp"
        android:layout_alignEnd="@+id/updateinfo"
        android:layout_alignParentStart="true"
        android:onClick="addinfo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Information"
        android:id="@+id/viewinfo"
        android:layout_below="@+id/addinfo"
        android:layout_marginTop="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="viewinfo" />
</RelativeLayout>
